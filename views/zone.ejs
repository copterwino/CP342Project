<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/mgalante/jquery.redirect@master/jquery.redirect.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.16/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="/public/style.css" rel="stylesheet">
    <link href="/public/concert.css" rel="stylesheet">
    <title>Zones</title>
</head>

<body style="background-color:black;">
    <%- include('./partials/navbar'); %>
        <h2 class="h3 mb-4 fw-normal text-center" style="color:#00ffcb;">Zones</h2>
        <div class="w3-black" id="tour">
            <div class="w3-container w3-content" style="max-width:800px">
                <div class="w3-row-padding w3-padding-32" style="margin:0 -16px">
                    <% if(zone.length){ for(var i=0; i< zone.length; i++){ if(i%3==0){ %>
                </div>
                <div class="w3-row-padding w3-padding-32" style="margin:0 -16px">
                    <% } %>
                        <div class="w3-third w3-margin-bottom">
                            <div class="w3-container w3-white w3-center">
                                <header class="w3-container w3-teal w3-center w3-padding-32">
                                    <h3><b>
                                            <%= zone[i].hallName %> (<%= zone[i].zoneName %>) : <%=
                                                        zone[i].zoneNumberOfSeat %>
                                        </b></h3>
                                </header>
                                <h3>Hall name : <%= zone[i].hallName %>
                                </h3>
                                <h3>Zone name : <%= zone[i].zoneName %>
                                </h3>
                                <h3>Zone price : <%= zone[i].zonePrice %>
                                </h3>
                                <h3>Number of Seats : <%= zone[i].zoneNumberOfSeat %>
                                </h3>
                                <button class="w3-button w3-red w3-margin-bottom mt-2"
                                    onclick="document.getElementById('delete<%= i %>').style.display='block'">Remove</button>
                            </div>
                        </div>
                        <% } }else{ %>
                            <tr>
                                <h5 class="w3-wide w3-center">No zone available at this time.</h5>
                            </tr>
                            <% } %>
                </div>
            </div>
            <% if(zone.length){ for(var i=0; i< zone.length; i++){ %>
                <!-- Delete Modal -->
                <div id="delete<%= i %>" class="w3-modal">
                    <span>
                        <div class="w3-modal-content w3-card-4">
                            <header class="w3-container w3-white w3-center w3-padding-32">
                                <h3 class="w3-wide"></i>Are you sure you want to remove '<%= zone[i].zoneName %>'</h3>
                                <form id="delete-form<%= i %>">
                                    <input type="text" id="zoneID<%= i %>" style="display:none"
                                        value='<%= zone[i]._id %>' required>
                                    <button class="w3-button w3-green w3-section w3-left w3-round-xxlarge" type="submit"
                                        onclick="zoneNumber='<%= i %>';">Yes</button>
                                </form>
                                <button class="w3-button w3-red w3-section w3-right w3-round-xlarge no"
                                    onclick="document.getElementById('delete<%= i %>').style.display='none'">No</button>
                        </div>
                        </header>
                </div>
                </span>
        </div>
        <% } } %>
            <main class="form">
                <h2 class="h3 mb-4 fw-normal text-center" style="color:#00ffcb;">Insert a new zone</h2>
                <form id="insert-form">
                    <div class="block">
                        <label class="h5 mb-4 fw-normal ">Zone hall name<i style="color:red">* </i> : </label>
                        <select class='w3-button w3-white w3-right' name="optionType" id="hallName" required>
                            <option value="" hidden selected> </option>
                            <% if(hall.length){ for(var i=0; i< hall.length; i++){ %>
                                <option value="<%= hall[i].hallName %>">
                                    <%= hall[i].hallName %>
                                </option>
                                <% }} %>
                        </select>
                    </div>
                    <div class="block">
                        <label class="h5 mb-4 fw-normal ">Zone name<i style="color:red">* </i> : </label>
                        <input type="text" id="zoneName" placeholder="Zone name" required>
                    </div>
                    <div class="block">
                        <label class="h5 mb-4 fw-normal ">Zone price<i style="color:red">* </i> : </label>
                        <input type="number" id="zonePrice" placeholder="Zone price" min="1" required>
                    </div>
                    <div class="block">
                        <label class="h5 mb-4 fw-normal ">Number of seats<i style="color:red">* </i> : </label>
                        <input type="number" id="numOfSeat" placeholder="Number of seats" required>
                    </div>
                    <center>
                        <button class="w-100 btn btn-lg btn-primary mt-4 mb-5 w3-center" type="submit">Insert</button>
                    </center>
                </form>
            </main>
            <script>
                i = <%= zone.length %>;
            </script>
            <script src="/public/insertZone.js"></script>
</body>

</html>